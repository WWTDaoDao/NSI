<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_find_password">

    <LinearLayout
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="220dp"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <Spinner
            android:id="@+id/spinner_area_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/china_land"
            android:layout_gravity="left"
            android:gravity="left"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_area_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="+86"/>

            <ImageView
                android:id="@+id/img_area_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon_down"
                />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="手机号"
                android:textColorHint="#a0cbfb"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:textColor="@color/white"
                android:maxLength="11"
                android:maxLines="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_find_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="短信验证码"
                android:textColorHint="#a0cbfb"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:inputType="phone"
                android:maxLength="6"
                android:maxLines="1" />

            <Button
                android:id="@+id/tv_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="#7fffcc00"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/line_top"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_bg_common"
        android:text="下一步"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp" />

</RelativeLayout>