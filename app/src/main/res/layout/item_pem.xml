<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <View
                android:layout_width="5dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:background="@color/color_text_selected"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_corners_light_blue"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="买"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="USDT/CNY"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/TVorder_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/type"
                android:paddingLeft="10dp"
                android:textColor="#999"
                android:paddingRight="10dp"
                android:text="订单编号：13113123165"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/yinhangka"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/weixin"
                android:src="@mipmap/yinhangka"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/weixin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/legal_zhifubao"
                android:src="@mipmap/weixin"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/legal_zhifubao"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/zhifubao"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="价格：0.68"
                    android:textColor="#999"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数量：100"
                        android:textColor="#999"
                        android:textSize="14sp" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/TV_Data"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-08-12"
                        android:textColor="#999"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_c1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_JE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="2.012"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="总金额"
                    android:textColor="#999"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/TV_payment"
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:background="@drawable/shape_corners_light_blue"
                android:layout_gravity="center_vertical"
                android:text="请放币完成交易"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
